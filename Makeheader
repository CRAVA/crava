#
# The available CRAVA compiler directives are
#    -DBIGENDIAN                  (needed for IRIX,SUNOS, etc...)  
#
CDIR       = 
CXX        = g++
CC         = gcc
GCCWARNING = -Wall -pedantic -Wno-long-long -Werror
GXXWARNING = -Wall -pedantic -Woverloaded-virtual -Wno-long-long -Wold-style-cast -Werror
PROGRAM    = cravarun
GRAMMAR    = grammar
OPT        = -O2
DEBUG      =
PURIFY     = 
mode       = all

ifeq ($(mode),debug)
# Don't use -O2 (makes it impossible to set breakpoints)
DEBUG = -g
OPT   = -O0
endif

ifeq ($(mode),profile)
# Don't use -ggdb here
DEBUG   = -g 
PROFILE = -pg
endif

ifeq ($(mode),purify)
# Don't use -ggdb here
DEBUG   = -g
OPT     = -O0
PROGRAM = cravarun.purify
PURIFY  = purify -best-effort
endif

OPT     := $(strip $(OPT))
PROFILE := $(strip $(PROFILE))
DEBUG   := $(strip $(DEBUG))
CDIR    := $(strip $(CDIR))
PURIFY  := $(strip $(PURIFY))

EXTRAFLAGS = $(strip $(OPT) $(PROFILE) $(DEBUG) $(CDIR))

CFLAGS     = $(GCCWARNING)
CXXFLAGS   = $(GXXWARNING)
CPPFLAGS   = $(EXTRAFLAGS)
LFLAGS     = $(PROFILE) $(DEBUG) -static -lm
