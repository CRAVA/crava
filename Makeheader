#
# The available CRAVA compiler directives are
#    -DSEGY_ISEX
#    -DBYPASS_COORDINATE_SCALING
#    -DBIGENDIAN                  (needed for IRIX,SUNOS, etc...)  
#
CDIR       = -DBYPASS_COORDINATE_SCALING
CXX        = g++
CC         = gcc
OPT        = -O2
GCCWARNING = -Wall -pedantic -Wno-long-long
GXXWARNING = -Wall -pedantic -Woverloaded-virtual -Wno-long-long
PURIFY     = /nr/prog/rational/releases/PurifyPlus.7.0.0.0-008/i386_linux2/bin/purify
PROGRAM    = cravarun
mode       = all

ifeq ($(mode),debug)
DEBUG   = -ggdb
endif

ifeq ($(mode),profile)
# Don't use -ggdb here
DEBUG   = -g 
PROFILE = -pg
endif

ifeq ($(mode),purify)
# Don't use -ggdb here
DEBUG   = -g
PROGRAM = cravarun.purify
endif

OPT     := $(strip $(OPT))
PROFILE := $(strip $(PROFILE))
DEBUG   := $(strip $(DEBUG))
CDIR    := $(strip $(CDIR))

EXTRAFLAGS = $(strip $(OPT) $(PROFILE) $(DEBUG) $(CDIR))

CFLAGS     = $(GCCWARNING)
CXXFLAGS   = $(GXXWARNING)
CPPFLAGS   = $(EXTRAFLAGS)
LFLAGS     = $(PROFILE) $(DEBUG) -static -lm
